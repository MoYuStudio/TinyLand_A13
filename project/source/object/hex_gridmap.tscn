extends GridMap

var 生成边界 = 128

var 噪声
var 噪声类型 = 3
var 噪声种子 = randi_range(0,999999999)
var 噪声频率 = 0.06

var 碰撞点 = Vector3(0,0,0)
var 碰撞面 = Vector3(0,0,0)
var 碰撞类型

func _ready():
	噪声 = FastNoiseLite.new()
	噪声.noise_type = 噪声类型
	噪声.seed = 噪声种子
	噪声.frequency = 噪声频率
	
	for x in range(-生成边界):
		for z in range(-生成边界/3.5,生成边界/3.5):
			var 瓷砖类型 = 噪声.get_noise_2d(x/3.5,z)*1000
			瓷砖类型 = int(瓷砖类型)
			var 六边形生成错位 = (x % 2)*2
			var 生成概率 = randi_range(0,100)
			if 0 <= 瓷砖类型 and 瓷砖类型 < 20:
				if 0 <= 生成概率 and 生成概率 < 90:
					set_cell_item(Vector3(x,0,z*4+六边形生成错位),2,0) # 沙滩
				if 90 <= 生成概率 and 生成概率 < 101:
					set_cell_item(Vector3(x,0,z*4+六边形生成错位),8,0) # 沙滩石头
			if 20 <= 瓷砖类型 and 瓷砖类型 < 170:
				if 0 <= 生成概率 and 生成概率 < 30:
					set_cell_item(Vector3(x,0,z*4+六边形生成错位),1,0) # 草地
				if 30 <= 生成概率 and 生成概率 < 101:
					set_cell_item(Vector3(x,0,z*4+六边形生成错位),6,0) # 树林
			if 170 <= 瓷砖类型 and 瓷砖类型 < 200:
				if 0 <= 生成概率 and 生成概率 < 30:
					set_cell_item(Vector3(x,0,z*4+六边形生成错位),0,0) # 戈壁沙土
				if 30 <= 生成概率 and 生成概率 < 101:
					set_cell_item(Vector3(x,0,z*4+六边形生成错位),5,0) # 戈壁树林
			if 200 <= 瓷砖类型 and 瓷砖类型 < 1000:
				if 0 <= 生成概率 and 生成概率 < 30:
					set_cell_item(Vector3(x,0,z*4+六边形生成错位),3,0) # 戈壁
				if 30 <= 生成概率 and 生成概率 < 101:
					set_cell_item(Vector3(x,0,z*4+六边形生成错位),9,0) # 戈壁小石头
func _process(delta):
	if Input.is_action_pressed('Left_Click'):
		if 碰撞点 != Vector3(0,0,0):
			var pos = local_to_map(Vector3i(碰撞点))
			# print(pos)
			if 碰撞类型 == 'Right_Click':
				set_cell_item(Vector3(pos.x + 碰撞面.x,
									pos.y -4 + 碰撞面.y,#-5
									pos.z +1 + 碰撞面.z),-1,0)#+1
			elif 碰撞类型 == 'Left_Click':
				set_cell_item(Vector3(pos.x + 碰撞面.x,
									pos.y -4 + 碰撞面.y,#-5
									pos.z +1 + 碰撞面.z),4,0)#+1
"

